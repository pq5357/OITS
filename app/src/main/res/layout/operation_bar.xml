<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/operation_bar_background"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_left"
        android:layout_centerHorizontal="true"
        android:background="@drawable/state_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_center"
        android:layout_marginLeft="40dp"
        android:layout_alignLeft="@id/iv_back"
        android:background="@drawable/state_exception"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_right"
        android:layout_marginRight="40dp"
        android:layout_alignRight="@id/iv_back"
        android:background="@drawable/state_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>